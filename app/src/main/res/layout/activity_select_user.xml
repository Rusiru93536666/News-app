<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    tools:context=".SelectUser">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Who Are You ?"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.118" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="327dp"
        android:layout_height="38dp"
        android:gravity="center"
        android:text="Select what is your position (User, Reporter, Admin) in REPORTER"
        android:textColor="#979797"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.182" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="14dp">

        <!-- User Card -->
        <LinearLayout
            android:layout_width="381dp"
            android:layout_height="174dp"
            android:background="@drawable/select_card_background"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="232dp"
                android:layout_height="151dp"
                android:layout_marginRight="0dp"
                android:background="@drawable/repoterbg" />

            <Button
                android:id="@+id/viwerbtn"
                android:layout_width="110dp"
                android:layout_height="48dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/black"
                android:gravity="center"
                android:text="User"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- Reporter Card -->
        <LinearLayout
            android:layout_width="381dp"
            android:layout_height="174dp"
            android:background="@drawable/select_card_background"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="232dp"
                android:layout_height="151dp"
                android:layout_marginRight="0dp"
                android:background="@drawable/repoterbg" />

            <Button
                android:id="@+id/reporterbtn"
                android:layout_width="110dp"
                android:layout_height="48dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/black"
                android:gravity="center"
                android:text="Reporter"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- Admin Card -->
        <LinearLayout
            android:layout_width="381dp"
            android:layout_height="174dp"
            android:background="@drawable/select_card_background"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="232dp"
                android:layout_height="151dp"
                android:layout_marginRight="0dp"
                android:background="@drawable/repoterbg" />

            <Button
                android:id="@+id/adminbtn"
                android:layout_width="110dp"
                android:layout_height="48dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/black"
                android:gravity="center"
                android:text="Admin"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
